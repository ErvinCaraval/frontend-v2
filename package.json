{
  "name": "brainblitz-frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "vite build --mode production",
    "preview": "vite preview",
  "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" \"scripts/**/*.js\" vite.config.js eslint.config.js --report-unused-disable-directives --max-warnings 0",
    "optimize:images": "node scripts/optimize-images.js",
    "test:unit": "vitest",
    "test:unit:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:a11y": "playwright test tests/e2e/a11y.spec.ts",
    "test:visual": "playwright test --project=chromium",
    "test:ci": "vitest && playwright test",
    "test": "npm run test:unit && npm run test:e2e"
  },
  "dependencies": {
    "firebase": "^10.12.0",
    "framer-motion": "^12.23.22",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.0",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.14",
    "axe-core": "^4.10.3",
    "axe-playwright": "^2.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^7.0.0",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.7",
    "vite": "^5.2.0",
    "vitest": "^3.2.4"
  }
}
